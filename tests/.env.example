# ===========================================
# CONFIGURAÇÕES DE AMBIENTE - TESTES
# ===========================================
# Copie este arquivo para .env e configure os valores

# API Configuration
API_URL=http://localhost:5000/api
FRONTEND_URL=http://localhost:3000

# Test Database (se diferente da produção)
TEST_DATABASE_URL=Server=localhost;Database=NoraCOND_Test;Trusted_Connection=true;

# Test User Credentials
TEST_EMAIL=teste@noracond.com
TEST_PASSWORD=senha123
TEST_USER_NAME=Usuário Teste

# Additional Test Users (para testes de colaboração)
TEST_USER_2_EMAIL=teste2@noracond.com
TEST_USER_2_PASSWORD=senha456
TEST_USER_2_NAME=Usuário Teste 2

# Test Configuration
NODE_ENV=test
TEST_TIMEOUT=30000
JEST_TIMEOUT=60000

# Load Test Configuration
K6_VUS=50
K6_DURATION=10m
K6_RAMP_UP=2m
K6_RAMP_DOWN=2m
K6_THRESHOLD_DURATION=500
K6_THRESHOLD_ERROR_RATE=0.01

# File Upload Configuration
TEST_UPLOAD_PATH=./test-files
MAX_FILE_SIZE=10485760

# JWT Configuration (para testes)
JWT_SECRET=test-secret-key-for-testing-only
JWT_EXPIRATION=1h

# Email Configuration (para testes de notificação)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=test-user
SMTP_PASS=test-password

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./reports/test-execution.log

# Browser Configuration (para testes E2E com Puppeteer)
HEADLESS=true
BROWSER_TIMEOUT=30000
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_THRESHOLD_MS=500

# Test Data Configuration
CLEANUP_TEST_DATA=true
SEED_TEST_DATA=true

# External Services (mocks para testes)
MOCK_EXTERNAL_APIS=true
EXTERNAL_API_TIMEOUT=5000

# Security Testing
ENABLE_SECURITY_TESTS=true
SECURITY_SCAN_TIMEOUT=60000

# Parallel Test Execution
MAX_WORKERS=4
TEST_CONCURRENCY=2

# Report Configuration
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
REPORT_PATH=./reports

# Notification Configuration (para CI/CD)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# Environment Specific
ENVIRONMENT=test
DEBUG_MODE=true
VERBOSE_LOGGING=true