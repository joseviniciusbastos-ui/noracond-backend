{
  "name": "noracond-tests",
  "version": "1.0.0",
  "description": "Suite de testes para NoraCOND - Fase II QA",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration --verbose",
    "test:e2e": "jest --testPathPattern=e2e --verbose",
    "test:load": "k6 run load-tests/stress-test.js",
    "test:performance": "k6 run load-tests/performance-test.js",
    "test:report": "jest --coverage --coverageReporters=html",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:all": "npm run test:integration && npm run test:e2e",
    "test:full": "npm run test:all && npm run test:load",
    "clean": "rimraf reports coverage",
    "setup": "npm install && mkdir -p reports coverage",
    "postman:run": "newman run postman/NoraCOND-API-Tests.json -e postman/environment.json"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "form-data": "^4.0.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "newman": "^6.2.0",
    "puppeteer": "^22.4.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}